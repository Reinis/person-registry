{% extends "base.twig" %}

{% block title %}Add New{% endblock %}

{% block content %}
    {{ parent() }}
    <div class="flex justify-center">
        <form action="/add" method="post" class="mb-4">
            <div class="flex flex-col col-span-4 text-xl">
                <label for="fist_name">First Name</label>
                <input type="text" id="fist_name" placeholder="Name" name="first_name" class="rounded">
            </div>
            <div class="flex flex-col col-span-4 text-xl">
                <label for="last_name">Last Name</label>
                <input type="text" id="last_name" placeholder="Surname" name="last_name" class="rounded">
            </div>
            <div class="flex flex-col col-span-4 text-xl">
                <label for="nid">National Id</label>
                <input type="text" id="nid" placeholder="000000-00000" name="nid" class="rounded">
            </div>
            <div class="flex flex-col col-span-4 text-xl">
                <label for="age">Age</label>
                <input type="text" id="age" placeholder="0" name="age" class="rounded">
            </div>
            <div class="flex flex-col col-span-4 text-xl">
                <label for="address">Address</label>
                <input type="text" id="address" placeholder="Address" name="address" class="rounded">
            </div>
            <div class="flex flex-col col-span-4 text-xl">
                <label for="notes">Notes</label>
                <input type="text" id="notes" name="notes" value="" class="rounded">
            </div>
            <div class="flex justify-between items-center mt-4">
                <a href="/" class="btn bg-green-400">Back</a>
                <input type="submit" class="btn bg-green-400 font-bold" value="Submit">
            </div>
        </form>
    </div>
{% endblock %}
