{% extends "base.twig" %}

{% block title %}Edit{% endblock %}

{% block content %}
    {{ parent() }}
    <div class="flex justify-center">
        <form action="/edit/{{ person.id }}" method="post" class="mb-4">
            <div class="flex flex-col col-span-4 text-xl">
                <label for="fist_name">First Name</label>
                <input type="text" id="fist_name" class="rounded" value="{{ person.firstName }}" disabled>
            </div>
            <div class="flex flex-col col-span-4 text-xl">
                <label for="last_name">Last Name</label>
                <input type="text" id="last_name" class="rounded" value="{{ person.lastName }}" disabled>
            </div>
            <div class="flex flex-col col-span-4 text-xl">
                <label for="nid">National Id</label>
                <input type="text" id="nid" class="rounded" value="{{ person.nationalId }}" disabled>
            </div>
            <div class="flex flex-col col-span-4 text-xl">
                <label for="age">Age</label>
                <input type="text" id="age" class="rounded" value="{{ person.age }}" disabled>
            </div>
            <div class="flex flex-col col-span-4 text-xl">
                <label for="address">Address</label>
                <input type="text" id="address" class="rounded" value="{{ person.address }}" disabled>
            </div>
            <div class="flex flex-col col-span-4 text-xl">
                <label for="notes">Notes</label>
                <input type="text" name="notes" id="notes" class="rounded" value="{{ person.notes }}">
            </div>
            <div class="flex justify-between items-center mt-4">
                <a href="/" class="btn bg-green-400">Back</a>
                <input type="submit" class="btn bg-green-400 font-bold" value="Submit">
            </div>
        </form>
    </div>
{% endblock %}
